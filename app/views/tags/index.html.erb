<div class="tags-index">
<h1> Find tutorials by tag name</h1>
<div class="search-form">
<%= search_form_for @search do |f| %>
<%= f.text_field :content_cont, :placeholder => "Search by tag" %>
<%= f.submit "Search", :class => "btn" %>
<% end %>
</div>
<table class="table">
  <% @quarter_tags.each do |tag| %>
  <tr>
    <td class="tag-cell"><%= link_to tag[0].content, tag[0], :class => 'tag-link', :target => 'blank' %> x<%= tag[0].taggings.count %> </td> 
    <td class="tag-cell"><%= link_to tag[1].content, tag[1], :class => 'tag-link', :target => 'blank' %> x<%= tag[1].taggings.count %> </td> 
    <td class="tag-cell"><%= link_to tag[2].content, tag[2], :class => 'tag-link', :target => 'blank' %> x<%= tag[2].taggings.count %> </td> 
    <td class="tag-cell"><%= link_to tag[3].content, tag[3], :class => 'tag-link', :target => 'blank' %> x<%= tag[3].taggings.count %> </td> 
  </tr>
  <% end %>
</table>
</div>
