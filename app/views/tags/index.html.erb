<div class="tags-index">
<h1> Find tutorials by tag name</h1>
<div class="search-form">
<%= search_form_for @search do |f| %>
<%= f.text_field :content_cont, :placeholder => "Search by tag" %>
<%= f.submit "Search", :class => "btn" %>
<% end %>
</div>
<table class="table table-hover">
  <% @split_tags.each do |row_of_tags| %>
  <tr>
    <% row_of_tags.each do |tag| %>
    <td class="tag-cell"><%= link_to tag.content, tag, :class => 'tag-link', :target => 'blank' %> x<%= tag.taggings.count %> </td> 
    <% end %>
  </tr>
  <% end %>
</table>
</div>
