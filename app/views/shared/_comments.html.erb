<section id="comment-list">
  <div class="comment-stats">
    <% if tutorial.comments.count > 0 %> 
      <h4><%= pluralize(tutorial.comments.count, "Comment")%> </h4>
      <a href="#comment-form">Add new comment</a>
    <% else %>
        <h4>Be the first one to comment!</h4>
    <% end %>
  </div>
  <ul>
  <% @comments.each do |comment| %>
        <li>
            <%= gravatar_for comment.user.email, size: 40 %>
              <%= link_to comment.user.username.capitalize , comment.user.username, class: "username"  %>
            <small>
              <%= time_ago_in_words(comment.created_at) %> ago
              <% if current_user && current_user.id == comment.user.id %>
                <%= link_to "Delete", comment_path(comment), method: :delete %>
                <%= link_to "Edit", edit_comment_path(comment) %>
              <% end %>
            </small>
            <p class="main"><%= comment.content %></p>
        </li>
  <% end %>
  </ul>
</section>