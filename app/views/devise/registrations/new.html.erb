<div class="sign-up">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div><%= f.label :username %>
      <%= f.text_field :username, :autofocus => true %>
    </div>
    <div><%= f.label :email %>
    <%= f.email_field :email %></div>

    <% if f.object.password_required? %>
  	  <div><%= f.label :password %>
  	  <%= f.password_field :password %></div>
    <% end %>

     <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, :checked => "checked" %> <%= f.label :remember_me %>
    <% end -%>
    <div><%= f.submit "Sign up", class: "btn btn-success btn-large" %></div>
  <% end %>
  <div class="or">OR</div>
  <img class="github-icon" src="/assets/dojocat.png" height="250" width="250">
  <%= render "devise/shared/links_signup" %>

</div>

