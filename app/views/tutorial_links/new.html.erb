<h1>Submit a Tutorial</h1>


<%= form_for @tutorial do |f| %>
  <%= render 'shared/error_messages', object: @tutorial %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label "Choose Category:" %>
  <%= collection_select(:tutorial_link, :category_id, Category.all, :id, :name) %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <small>e.g "ruby ruby-on-rails javascript oauth"</small>
  <%= label_tag :tags %>
  <%= text_field_tag :tag %>
  <%= f.submit "Submit tutorial" %>
<% end %>

