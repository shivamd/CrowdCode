<h1>Submit a Tutorial</h1>

<% if @tut_link.errors.any? %>
  <ul>
  	<% @tut_link.errors.full_messages.each do |msg| %>
  	  <li>*<%= msg %></li>
  	<% end %>
  </ul>
<% end %>

<%= form_for @tut_link do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.submit "Submit tutorial" %>
<% end %>

