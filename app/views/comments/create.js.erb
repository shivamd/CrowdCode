<% if @comment.commentable_type == "Tutorial" %>
  $('section#comment-list ul').append("<%= j render 'shared/comment', :comment => @comment %>");
  $('.comment-stats').html("<%= j render 'comments/comment_count', :tutorial => @comment.commentable %>");
  $('#comment_content').val("");
	$('span.comment-count').text("<%= @comment.commentable.comments.count %>");
<% else %>
	$('li#<%= @comment.commentable_id%> section').append("<%= j render 'comments/nested_comment', c: @comment %>");
	$('form.nested-comment textarea').val("");
	$('div.nested-comment').hide();
	$('form.new_comment').show();
<% end %>

