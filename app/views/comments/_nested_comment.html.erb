<li class="nested">
  <%= gravatar_for c.user.email, size: 40 %>
  <%= link_to c.user.username.capitalize , c.user.username, class: "username"  %>
  <small> 
    <%= time_ago_in_words(c.created_at) %> ago
    <% if current_user && current_user.id == c.user_id %>
		  <%= link_to "Delete", comment_path(c), method: :delete %>
			<%= link_to "Edit", edit_comment_path(c) %>
		<% end %>
  </small>
  <p class="main"><%= c.content %></p>
  </li>