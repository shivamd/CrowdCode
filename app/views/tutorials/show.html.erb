<div class="tutorial-show" id="<%= @tutorial.id %>">
  
  <h1><%= @tutorial.title %></h1>
    
  <%= render 'shared/meta_info', tut: @tutorial %>
  

  <% if @tutorial.url.present? %>
    <%= link_to @tutorial.url, generate_url(@tutorial) %>
  <% else %>
    <%= @markdown.html_safe  %>
  <% end %>

  <% unless @tags.blank? %>
    <p>Tags: <%= @tags %></p>
  <% end %>

  <% if @tutorial.author?(current_user) || (current_user && current_user.admin?) %>
    <%= link_to "edit tutorial", edit_tutorial_path(@tutorial) %>
    <%= link_to "delete tutoiral", tutorial_path(@tutorial), method: :delete %>
  <% end %>
  <div class="share-this">
    <%= render 'shared/addthis', tut: @tutorial %>
  </div>
  <div class="comments-container">  
    <%= render 'shared/comments', tutorial: @tutorial %>
    <%= render 'shared/comments_form', comment: @comment %>
  </div>



  <div class="sidebar">
    <div class="addthis_toolbox addthis_floating_style addthis_32x32_style"> 
    <div class="favorite">
      <% if current_user && !@tutorial.bookmarked_by?(current_user) %>
      <span class="icon star"><i class="ss-icon">star</i></span>
    <% elsif current_user %>
        <span class="icon star-yellow"><i class="ss-icon">star</i></span>
      <% else %>
      <% end %>
    </div>
    <a class="addthis_button_twitter"></a>
    <a class="addthis_button_facebook"></a>
    <a class="addthis_button_google_plusone_share"></a>
    <a class="addthis_button_stumbleupon"></a>
    <a class="addthis_button_reddit"></a>
    <a class="addthis_button_email"></a>
    </div>
  </div>
</div>