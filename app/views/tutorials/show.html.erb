<h1><%= @tutorial.title %></h1>
<p><%= @markdown.html_safe %></p>
<% if @tags %>
  <p>Tags: <%= @tags %></p>
<% end %>
<%= button_to "Edit tutorial", edit_tutorial_path, method: "get" %>
<%= button_to "Delete tutorial", tutorial_path, method: "delete" %>

<%= form_for @comment do |f| %>
<%= f.hidden_field :commentable_id %>
<%= f.hidden_field :commentable_type %>
<%= f.text_area :content, size: "10x5" %><br>
<%= f.submit "Add comment" %>
<% end %>

<% unless @comments.empty? %>
<%= @comments.empty? %> 
  <% @comments.each do |comment| %>
    <div class="comment-box">
      <div class="comment-header">
        <span class="comment-head">
          <%= link_to "#{comment.username.capitalize}", "/#{comment.username}"  %> | 
          <%= "#{distance_of_time_in_words_to_now(comment.created_at)} ago" %>
        </span>
      </div>
      <div class="comment-body">
        <p><%= comment.content %></p><br>
      </div>
    </div>
  <% end %>
<% end %>